<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.lazarogarciacruz.bitagora.vista.mainScreen.MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/mainViewBlackBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.7"
                android:background="#000000" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/mainViewNuevoJuegoComponentes"
            android:layout_width="300dp"
            android:layout_height="500dp"
            android:layout_marginBottom="25dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/mainViewNuevoJuegoPreview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/fondo_blanco" />

                <Button
                    android:id="@+id/mainViewBotonCerrar"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="right"
                    android:layout_marginEnd="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_marginTop="4dp"
                    android:background="@null"
                    android:text="X"
                    android:textSize="24sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="68dp"
                        android:layout_marginLeft="68dp"
                        android:layout_marginRight="68dp"
                        android:layout_marginStart="68dp"
                        android:layout_marginTop="25dp"
                        android:layout_weight="0.82">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginBottom="1dp"
                            android:layout_marginLeft="3dp"
                            android:layout_marginRight="3dp"
                            android:layout_marginTop="1dp"
                            android:adjustViewBounds="true"
                            android:background="@drawable/fondo_madera" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginBottom="13dp"
                            android:layout_marginLeft="13dp"
                            android:layout_marginRight="13dp"
                            android:layout_marginTop="10dp"
                            android:adjustViewBounds="true"
                            android:background="@drawable/fondo_tapiz" />

                        <pl.droidsonroids.gif.GifImageView
                            android:id="@+id/mainViewNuevoUpCover"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginBottom="18dp"
                            android:layout_marginLeft="19dp"
                            android:layout_marginRight="19dp"
                            android:layout_marginTop="16dp"
                            android:adjustViewBounds="true"
                            android:scaleType="centerCrop"/>

                        <ImageView
                            android:id="@+id/mainViewNuevoUpLogo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginBottom="32dp"
                            android:layout_marginLeft="33dp"
                            android:layout_marginRight="33dp"
                            android:layout_marginTop="30dp"
                            android:adjustViewBounds="true"
                            android:cropToPadding="false"
                            android:scaleType="fitCenter" />

                        <TextView
                            android:id="@+id/mainViewNuevoUpTexto"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="27dp"
                            android:layout_marginLeft="28dp"
                            android:layout_marginRight="28dp"
                            android:layout_marginTop="25dp"
                            android:gravity="center"
                            android:text=""
                            android:textAlignment="center"
                            android:textSize="12sp" />

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="30dp"
                        android:layout_marginEnd="32dp"
                        android:layout_marginLeft="32dp"
                        android:layout_marginRight="32dp"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="15dp"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginBottom="1dp"
                            android:layout_marginLeft="3dp"
                            android:layout_marginRight="3dp"
                            android:layout_marginTop="1dp"
                            android:adjustViewBounds="true"
                            android:background="@drawable/fondo_madera" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginBottom="13dp"
                            android:layout_marginLeft="13dp"
                            android:layout_marginRight="13dp"
                            android:layout_marginTop="10dp"
                            android:adjustViewBounds="true"
                            android:background="@drawable/fondo_tapiz" />

                        <pl.droidsonroids.gif.GifImageView
                            android:id="@+id/mainViewNuevoDownCover"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginBottom="18dp"
                            android:layout_marginLeft="19dp"
                            android:layout_marginRight="19dp"
                            android:layout_marginTop="16dp"
                            android:adjustViewBounds="true"
                            android:cropToPadding="false"
                            android:scaleType="centerCrop" />

                        <ImageView
                            android:id="@+id/mainViewNuevoDownLogo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginBottom="27dp"
                            android:layout_marginLeft="28dp"
                            android:layout_marginRight="28dp"
                            android:layout_marginTop="25dp"
                            android:adjustViewBounds="true"
                            android:cropToPadding="false"
                            android:scaleType="fitCenter" />

                        <TextView
                            android:id="@+id/mainViewNuevoDownTexto"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="27dp"
                            android:layout_marginLeft="28dp"
                            android:layout_marginRight="28dp"
                            android:layout_marginTop="25dp"
                            android:gravity="center"
                            android:text=""
                            android:textAlignment="center"
                            android:textSize="12sp" />

                    </FrameLayout>

                </LinearLayout>

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="25dp"
                android:layout_weight="0.8"
                android:background="#BDBDBD"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="#E0E0E0">

                    <TextView
                        android:id="@+id/mainViewTextoTitulo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        android:background="#FFFFFF"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:gravity="left|center"
                        android:hint="Titulo del juego"
                        android:inputType="text"
                        android:maxEms="50"
                        android:maxLength="50"
                        android:maxLines="1"
                        android:paddingLeft="5dp"
                        android:text=""
                        android:textSize="10sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    tools:layout_editor_absoluteX="8dp"
                    tools:layout_editor_absoluteY="8dp">

                    <Button
                        android:id="@+id/mainViewBotonCover"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_marginTop="1dp"
                        android:layout_weight="1"
                        android:background="#E0E0E0"
                        android:text="Cover"
                        android:textAllCaps="false" />

                    <Button
                        android:id="@+id/mainViewBotonLogo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_marginTop="1dp"
                        android:layout_weight="1"
                        android:background="#E0E0E0"
                        android:text="Logo"
                        android:textAllCaps="false" />
                </LinearLayout>

                <Button
                    android:id="@+id/mainViewBotonCrear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:background="#E0E0E0"
                    android:enabled="false"
                    android:text="Crear"
                    android:textAllCaps="false"
                    tools:layout_editor_absoluteX="8dp"
                    tools:layout_editor_absoluteY="25dp" />

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</android.support.v4.widget.NestedScrollView>